{
  "name": "ts-react-node-project-skeleton",
  "version": "0.1.0",
  "description": "Skeleton for TypeScript React-Node projects.",
  "homepage": "https://ts-react-node-project-skeleton.herokuapp.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/jeffgore00/jg_ts_react_node_project_skeleton.git"
  },
  "main": "index.js",
  "scripts": {
    "build": "npm run build:client && npm run build:server",
    "build:client": "webpack",
    "build:server": "rm -rf dist && tsc --project tsconfig.server.json && if [ \"$NODE_ENV\" = \"production\" ]; then node -r ts-node/register src/server/health-check.ts; fi",
    "lint": "eslint \"**\"",
    "prettier:check": "prettier '**/*.js' '**/*.json' '**/*.md' '**/*.html' --check",
    "release": "standard-version",
    "start": "NODE_ENV=production node dist/server/index.js --unhandled-rejections=strict",
    "start:dev": "NODE_ENV=development nodemon -e js,ts,json src/server/index.ts --unhandled-rejections=strict --exec ts-node --extensions '.ts, .js'",
    "selenium": "docker run -it -p 4444:4444 vvoyer/selenium-standalone",
    "test": "NODE_ENV=test npm run test:unitAndApi && npm run lint && npm run prettier:check",
    "test:unitAndApi": "jest --runInBand --detectOpenHandles",
    "test:browser": "wdio wdio.conf.js"
  },
  "author": "Jeff Gore",
  "license": "ISC",
  "dependencies": {
    "@types/cors": "^2.8.9",
    "@types/node": "^14.14.6",
    "axios": "^0.21.1",
    "body-parser": "^1.19.0",
    "chalk": "^4.1.0",
    "cors": "^2.8.5",
    "date-fns": "^2.16.1",
    "express": "^4.17.1",
    "helmet": "^4.2.0",
    "morgan": "^1.10.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-media": "^1.10.0",
    "styled-components": "^5.1.0",
    "ts-node": "^9.0.0",
    "typescript": "^4.1.5",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@testing-library/react": "^9.4.1",
    "@types/express": "^4.17.8",
    "@types/jest": "^25.1.3",
    "@types/morgan": "^1.9.2",
    "@types/react": "^16.9.19",
    "@types/react-dom": "^16.9.5",
    "@types/styled-components": "^5.1.3",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^4.15.0",
    "@typescript-eslint/parser": "^4.15.0",
    "@wdio/cli": "^6.4.6",
    "@wdio/jasmine-framework": "^6.4.0",
    "@wdio/local-runner": "^6.4.6",
    "@wdio/spec-reporter": "^6.4.0",
    "@wdio/sync": "^6.4.6",
    "chromedriver": "^87.0.4",
    "compression-webpack-plugin": "^7.1.2",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^23.8.2",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^3.0.0",
    "html-webpack-plugin": "^4.4.1",
    "husky": "^4.2.1",
    "jest": "^26.6.3",
    "lint-staged": "^10.1.6",
    "nodemon": "^2.0.4",
    "prettier": "^2.0.4",
    "source-map-loader": "^0.2.4",
    "standard-version": "^9.0.0",
    "supertest": "^6.1.3",
    "ts-jest": "^26.5.1",
    "ts-loader": "^6.2.1",
    "typescript-plugin-styled-components": "^1.4.4",
    "wdio-chromedriver-service": "^6.0.4",
    "webpack": "^5.21.2",
    "webpack-cli": "^4.5.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,md,json,html}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts"
    ],
    "watch": [
      "src/server"
    ]
  }
}
