{
  "name": "ts-react-node-project-skeleton",
  "version": "0.1.0",
  "description": "Skeleton for TypeScript React-Node projects.",
  "homepage": "https://ts-react-node-project-skeleton.herokuapp.com",
  "author": "Jeff Gore",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/jeffgore00/jg_ts_react_node_project_skeleton.git"
  },
  "main": "index.js",
  "engines": {
    "node": "14.15.5"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts"
    ],
    "watch": [
      "src/server"
    ]
  },
  "scripts": {
    "build": "npm run build:client && npm run build:server",
    "build:dev": "NODE_ENV=development npm run build:client",
    "build:dev:offline": "BUILD_OFFLINE=true npm run build:dev",
    "build:client": "webpack",
    "build:server": "rm -rf dist && tsc --project tsconfig.server.json && if [ \"$NODE_ENV\" = \"production\" ]; then node -r ts-node/register src/server/health-check.ts; fi",
    "lint": "eslint \"**\"",
    "prettier": "prettier '**/*.js' '**/*.ts' '**/*.tsx' '**/*.json' '**/*.md' '**/*.html'",
    "prettier:fix": "npm run prettier -- --write",
    "prettier:check": "npm run prettier -- --check",
    "release": "standard-version",
    "start": "NODE_ENV=production node dist/server/index.js --unhandled-rejections=strict",
    "start:dev": "NODE_ENV=development nodemon -e js,ts,json src/server/index.ts --unhandled-rejections=strict --exec ts-node --extensions '.ts, .js'",
    "selenium": "docker run -it -p 4444:4444 vvoyer/selenium-standalone",
    "test": "npm run test:unit-and-api && npm run lint && npm run prettier:check",
    "test:unit-and-api": "NODE_ENV=test jest --runInBand",
    "test:browser": "wdio wdio.conf.js",
    "pretest:browser": "tsc wdio.conf.ts --esModuleInterop --typeRoots ./node_modules/@types/wdio",
    "posttest:browser": "rm wdio.conf.js",
    "postinstall": "husky install"
  },
  "dependencies": {
    "@types/cors": "^2.8.9",
    "@types/node": "^14.14.6",
    "axios": "^0.21.1",
    "body-parser": "^1.19.0",
    "chalk": "^4.1.0",
    "cors": "^2.8.5",
    "date-fns": "^2.16.1",
    "express": "^4.17.1",
    "helmet": "^4.2.0",
    "morgan": "^1.10.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-media": "^1.10.0",
    "serialize-error": "^8.0.1",
    "styled-components": "^5.1.0",
    "ts-node": "^9.0.0",
    "typescript": "^4.1.5",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@testing-library/react": "^11.2.5",
    "@types/compression-webpack-plugin": "^6.0.4",
    "@types/express": "^4.17.11",
    "@types/jasmine": "^3.6.4",
    "@types/jest": "^26.0.20",
    "@types/morgan": "^1.9.2",
    "@types/react": "^17.0.2",
    "@types/react-dom": "^17.0.1",
    "@types/styled-components": "^5.1.7",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^4.15.0",
    "@typescript-eslint/parser": "^4.15.0",
    "@wdio/cli": "^7.0.8",
    "@wdio/jasmine-framework": "^7.0.7",
    "@wdio/local-runner": "^7.0.8",
    "@wdio/spec-reporter": "^7.0.7",
    "@wdio/sync": "^7.0.8",
    "@wdio/types": "^7.0.7",
    "chromedriver": "^89.0.0",
    "compression-webpack-plugin": "^7.1.2",
    "eslint": "^7.21.0",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.5",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "html-webpack-plugin": "^5.2.0",
    "husky": "^5.1.1",
    "jest": "^26.6.3",
    "lint-staged": "^10.1.6",
    "nodemon": "^2.0.4",
    "prettier": "^2.0.4",
    "source-map-loader": "^2.0.1",
    "standard-version": "^9.0.0",
    "supertest": "^6.1.3",
    "ts-jest": "^26.5.1",
    "ts-loader": "^8.0.17",
    "typescript-plugin-styled-components": "^1.4.4",
    "wdio-chromedriver-service": "^7.0.0",
    "webpack": "^5.21.2",
    "webpack-cli": "^4.5.0",
    "yargs": "^16.2.0"
  }
}
