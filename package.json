{
  "name": "ts-react-node-project-skeleton",
  "version": "0.1.0",
  "description": "Skeleton for TypeScript React-Node projects.",
  "main": "index.js",
  "scripts": {
    "build": "npm run build:client && npm run build:server",
    "build:client": "webpack",
    "build:server": "rm -rf dist && tsc --project tsconfig.server.json && node -r ts-node/register src/server/utils/create-healthfile.ts",
    "lint": "eslint \"**\"",
    "prettier:check": "prettier '**/*.js' '**/*.json' '**/*.md' '**/*.html' --check",
    "release": "standard-version",
    "start": "node dist/server/index.js",
    "start:dev": "NODE_ENV=development nodemon -e js,ts,json src/server/index.ts --exec ts-node --extensions '.ts, .js'",
    "selenium": "docker run -it -p 4444:4444 vvoyer/selenium-standalone",
    "test": "npm run lint && npm run prettier:check && npm run test:unitAndApi",
    "test:unitAndApi": "jest",
    "test:browser": "wdio wdio.conf.js"
  },
  "author": "Jeff Gore",
  "license": "ISC",
  "dependencies": {
    "@types/node": "^14.14.6",
    "body-parser": "^1.19.0",
    "date-fns": "^2.16.1",
    "express": "^4.17.1",
    "helmet": "^4.2.0",
    "morgan": "^1.10.0",
    "node-forge": "^0.10.0",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-media": "^1.10.0",
    "styled-components": "^5.1.0",
    "ts-node": "^9.0.0",
    "typescript": "^3.9.7",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@testing-library/react": "^9.4.1",
    "@types/express": "^4.17.8",
    "@types/jest": "^25.1.3",
    "@types/morgan": "^1.9.2",
    "@types/react": "^16.9.19",
    "@types/react-dom": "^16.9.5",
    "@types/styled-components": "^5.1.3",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^2.28.0",
    "@typescript-eslint/parser": "^2.28.0",
    "@wdio/cli": "^6.4.6",
    "@wdio/jasmine-framework": "^6.4.0",
    "@wdio/local-runner": "^6.4.6",
    "@wdio/spec-reporter": "^6.4.0",
    "@wdio/sync": "^6.4.6",
    "chalk": "^4.1.0",
    "chromedriver": "^85.0.1",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-typescript": "^7.2.1",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jest": "^23.8.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^3.0.0",
    "html-webpack-plugin": "^4.4.1",
    "husky": "^4.2.1",
    "jest": "^25.1.0",
    "lint-staged": "^10.1.6",
    "nodemon": "^2.0.4",
    "prettier": "^2.0.4",
    "source-map-loader": "^0.2.4",
    "standard-version": "^9.0.0",
    "supertest": "^4.0.2",
    "ts-jest": "^25.2.1",
    "ts-loader": "^6.2.1",
    "typescript-plugin-styled-components": "^1.4.4",
    "wdio-chromedriver-service": "^6.0.4",
    "webpack": "^4.41.5",
    "webpack-cli": "^3.3.10"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,md,json,html}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts"
    ],
    "watch": [
      "src/server"
    ]
  }
}
