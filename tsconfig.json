{
  "compilerOptions": {
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "lib": ["dom", "esnext"],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "types": [
      "node",
      "express",
      "react",
      "react-dom",
      "styled-components",
      "jest"
    ]
  },
  "include": [
    "src",
    "test-api",
    "test-utils",
    "jest-setup.js",
    "jest.config.js",
    "webpack.config.js"
  ]
}
