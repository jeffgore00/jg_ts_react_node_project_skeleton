{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es6",
    "jsx": "react",
    "lib": ["dom", "esnext"],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "types": [
      "node",
      "@wdio/sync",
      "@wdio/jasmine-framework",
      "jest",
      "react",
      "react-dom",
      "styled-components",
      "express"
    ]
  },
  "include": ["src", "test-browser", "test-api", "test-utils","."]
}
